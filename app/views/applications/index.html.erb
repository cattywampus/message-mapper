<p id="notice"><%= notice %></p>

<h1>Applications</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Baseline</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @applications.each do |application| %>
      <tr>
        <td><%= application.name %></td>
        <td><%= application.baseline %></td>
        <td><%= application.description %></td>
        <td><%= link_to 'Show', baseline_applications_path(@baseline, application) %></td>
        <td><%= link_to 'Edit', edit_baseline_application_path(@baseline, application) %></td>
        <td><%= link_to 'Destroy', baseline_applications_path(@baseline, application), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Application', new_baseline_application_path(@baseline) %>
