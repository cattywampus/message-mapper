<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<table>
  <thead>
  <tr>
    <th>Baselines</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @product.baselines.each do |baseline| %>
      <tr>
        <td><%= baseline.name %></td>
        <td><%= link_to 'Show', baseline %></td>
        <td><%= link_to 'Edit', edit_baseline_path(baseline) %></td>
        <td><%= link_to 'Destroy', baseline, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
