<p id="notice"><%= notice %></p>

<p>
  <h1><%= @baseline.product.name %> - <%= @baseline.name %></h1>
</p>

<p>
  <h3>Messages</h3>
  <%= link_to 'New Message', new_message_path(baseline: @baseline.id) %>
</p>
<table class="table-striped">
  <thead>
  <tr>
    <th>Msg</th>
    <th>Description</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @baseline.messages.each do |message| %>
      <tr>
        <td><%= message.msg_id %></td>
        <td><%= message.description %></td>
        <td><%= link_to 'Show', message %></td>
        <td><%= link_to 'Edit', edit_message_path(message) %></td>
        <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_baseline_path(@baseline) %> |
<%= link_to 'Back', baselines_path %>
